{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "paths": {
      "@env": ["./src/enviroment.ts"],
      "@store": ["./src/store/index"],
      "@store/*": ["./src/store/*"],
      "@core": ["./src/core/index"],
      "@core/*": ["./src/core/*"],
      "@api": ["./src/api/index"],
      "@app": ["./src/modules/app/index"],
      "@app/*": ["./src/modules/app/*"],
      "@main-page": ["./src/modules/main-page/index"],
      "@main-page/*": ["./src/modules/main-page/*"],
      "@order": ["./src/modules/order/index"],
      "@order/*": ["./src/modules/order/*"]
    }
  },
  "include": ["./src/**/*", "./typings/**/*"],
  "exclude": ["node_modules", "@types"]
}
